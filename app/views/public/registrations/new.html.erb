<div class="container">
 <h3 class="d-inline-block px-4 ml-5 text-success"><i class="fas fa-user-plus"></i>新規会員登録</h3>
 <div class="mx-4 mt-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "layouts/error_messages", model: @user %>
  <div class="form-group row">
   <label for="name", class="col-sm-3 col-form-label"><i class="fas fa-file-signature"></i> ニックネーム</label>
   <%= f.text_field :name, autocmplete: "name", placeholder: "ニックネームを入力" %>
  </div>
  
  <div class="form-group row">
   <label for="email", class="col-sm-3 col-form-label"><i class="fas fa-envelope"></i> メールアドレス</label>
   <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "col-9" %>
  </div>
  
  <div class="form-group row">
   <label for="password", class="col-sm-3 col-form-label"><i class="fas fa-lock"></i> パスワード(６文字以上)</label>
   <%= f.password_field :password, autocmplete: "new_password", placeholder: "パスワード" %>
  </div>
  
  <div class="form-group row">
   <label for="password_confirmation", class="col-sm-3 col-form-label"><i class="fas fa-lock"></i> パスワード(確認用)</label>
   <%= f.password_field :password_confirmation, autocmplete: "new_password", placeholder: "パスワード(確認)" %>
  </div>
  
  <div class="actions mt-1">
   <label for="submit", class="col-sm-3 col-form-label"></label>
   <%= f.submit "新規登録", class: "btn btn-outline-success px-5" %>
  </div>
  <% end %>
 </div>
 
 <div class="sign-up mt-3">
  <h5 class="d-inline-block px-3">既に登録済みの会員様は</h5>
  <p class="ml-5"><%= link_to "こちら", new_user_session_path, class: "hover-link" %> からログインをお願いします。</p>
 </div>
</div>
