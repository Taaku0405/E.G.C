      <div class="post_index d-flex flex-wrap">
        <% posts.each do |post| %>
        <div class="post_box mr-3">
          <%= link_to post_path(post) do %>
          <%= image_tag "E.G.C-logo.png", size:"150x100" %>
          <% end %>
          <br><div class="badge">タイトル<%= post.name %></div>
          <br><div class="badge">投稿者<%= post.user.name %></div>
          <br><div class="badge">投稿日<%= post.created_at.strftime('%Y/%m/%d %H:%M:%S') %></div>
          <br><div class="badge"><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></div>
        </div>
        <% end %>
      </div>