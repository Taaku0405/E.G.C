<div class="container">
  <h3 class="d-inline-block px-4 mx-5 mb-3 text-primary"><i class="fas fa-biohazard"></i>ゲーム詳細</h3>

  <div class="row">
    <div class="col-lg-3">
     <%= image_tag "E.G.C-logo.png", size:"150x100" %>
    </div>
    <div class="col-lg-7 offset-lg-2">
      <table class="table table-borderless">
        <tr>
          <th>投稿者</th>
          <td><%= @post.user.name %></td>
        </tr>
        <tr>
          <th>ゲーム名</th>
          <td><%= @post.name %></td>
        </tr>
        <tr>
          <th>ゲーム詳細</th>
          <td><%= @post.introduction %></td>
        </tr>
        <tr>
          <th>ゲームジャンル</th>
          <td><%= @post.genre.name %></td>
        </tr>
        <tr>
          <th>投稿日</th>
          <td><%= @post.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
        </tr>
      </table>

      <div class="text-center">
         <%= link_to "投稿情報を削除する", posts_path(@post), method: :delete, class: "btn btn-outline-danger px-5" %>
        <%= link_to "投稿を編集する", edit_post_path(@post), class: "btn btn-outline-success px-5 offset-2" %>
      </div>
    </div>
  </div>
</div>