<div class="container">
  <h3 class="d-inline-block px-4 ml-5 text-info"><i class="fas fa-user-astronaut"></i>ログイン</h3>

  <div class="mx-4 mt-3">
    <div class="log-in">
      <h5 class="d-inline-block px-3">会員の方はこちらからログイン</h5>
      <div class="text-center"><p class="alert"><%= alert %></p></div>

      <div class="form w-75 mx-auto my-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group row">
          <label for="email", class="col-sm-3 col-form-label"><i class="fas fa-envelope"></i> メールアドレス</label>
          <div class="col-sm-9">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <label for="password", class="col-sm-3 col-form-label"><i class="fas fa-lock"></i> パスワード</label>
          <div class="col-sm-9">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード",  class: "form-control" %>
          </div>
        </div>

        <div class="actions text-center mt-4">
          <%= f.submit "ログイン", class: "btn btn-outline-info px-5" %>
        </div>
        <% end %>
      </div>
    </div>

    <div class="sign-up mt-5">
      <h5 class="d-inline-block px-3">会員登録がまだお済みでない方は</h5>
      <p class="text-center"><%= link_to "こちら", new_user_registration_path, class: "hover-link" %> から新規登録をお願いします。</p>
    </div>

  </div>
</div>