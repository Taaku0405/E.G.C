<div class="container">
  <div id="error">
    <%= render "layouts/error_messages", model: @group %>
  </div>

  <h3 class="d-inline-block px-4 mx-5 mb-3 text-primary"><i class="fas fa-dice"></i>グループ編集</h3>

   <%= form_with model: @group, local: true do |f| %>

  <div class="form-group mb-5">
    <strong><%= f.label :"グループ名", class: "col-sm-3 col-form-label" %></strong>
    <span><%= f.text_field :name, placeholder: "グループ名を記入" %></span>
  </div>

  <div class="form-group mb-5">
    <strong><%= f.label :"紹介", class: "col-sm-3 col-form-label" %></strong>
    <span><%= f.text_area :introduction, placeholder: "グループの紹介文を記述してください" %></span>
  </div>

  <div class="form-group mb-5">
  <strong><%= f.label :"グループ画像", class: "col-sm-3 col-form-label" %></strong>
  <span><%= f.file_field :group_image, placeholder: "グループ画像", accept: "image/*" %></span>
  </div>

  <div class="form-group mb-5">
    <%= f.submit "グループを編集する", class: "btn btn-outline-success px-5" %>
  </div>
  <% end %>

</div>