<% group.chats.each do |chat| %>
<%= image_tag chat.user.get_profile_image, size: "50x50" %>
<%= chat.user.name %><br>
<%= chat.created_at.strftime('%Y/%m/%d %H:%M:%S') %><br>
<%= chat.message %><br>
<% if chat.user == current_user %>
<%= link_to "メッセージを削除", group_chat_path(group, chat), method: :delete, class: "btn btn-outline-danger pull-right", remote: true, data: {confirm: "本当に削除しますか？"}  %><br>
<% end %>
<% end %>