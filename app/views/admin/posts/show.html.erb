<div class="container">
  <h3 class="d-inline-block px-4 mx-5 mb-3 text-primary"><i class="fas fa-gavel"></i>ゲーム投稿詳細</h3>

  <div class="row">
    <div class="col-lg-3">
     <%= image_tag @post.user.get_profile_image, size: "400x400" %>
    </div>
    <div class="col-lg-7 offset-lg-2">
  <table class="table table-borderless">
    <tbody>
      <tr>
        <td>投稿者</td>
        <td><%= @post.user.name %></td>
      </tr>
      <tr>
        <td>ゲーム名</td>
        <td><%= @post.name %></td>
      </tr>
      <tr>
        <td>おすすめポイント</td>
        <td><%= @post.introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @post.genre.name %></td>
      </tr>
    </tbody>
  </table>

  <div class="text-center">
  <%= link_to "投稿情報を削除する", @post, method: :delete,class: "btn btn-outline-danger px-5" %>
  <%= link_to "投稿情報を編集する", edit_admin_post_path(@post), class: "btn btn-outline-success px-5 offset-2" %>
  </div>

  </div>
 </div>
</div>