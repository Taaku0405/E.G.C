<div class="card-header"><i class="fas fa-ghost"></i>ゲーム投稿</div>
<div class="table-responsive">
  <table class="table table-borderless">
    <thead class="bg-info">
      <tr>
        <th class="text-nowrap">投稿日時</th>
        <th class="text-nowrap">ゲーム名</th>
        <th class="text-nowrap">ジャンル</th>
        <th class="text-nowrap">投稿者</th>
        <th class="text-nowrap">コメント数</th>
      </tr>
    </thead>
    <tbody>
      <% posts.each do |post| %>
      <tr>
        <td><%= post.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
        <td>
          <%= link_to admin_post_path(post) do %>
          <u class="hover-link"><%= post.name %></u>
          <% end %>
        </td>
        <td><%= post.genre.name %></td>
        <td><%= post.user.name %></td>
        <td><%= link_to "#{post.post_comments.count} コメント", admin_post_path(post.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>