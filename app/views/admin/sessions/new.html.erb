<div class="container">
  <h3 class=" d-inline-block px-4 mx-5 mb-3 text-info"><i class="fas fa-user-ninja"></i>管理者ログイン</h3>

  <div class="container mt-4 m-2">

    <div class="log-in">
      <h5 class="d-inline-block px-3">管理者の方はこちらからログインしてください</h5>
      <div class="text-center"><p class="alert"><%= alert %></p></div>

      <div class="form w-75 mx-auto my-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group row">
          <label for="email", class="col-sm-3 col-form-label"><i class="fas fa-envelope"></i> メールアドレス</label>
          <div class="col-sm-9">
            <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "sample@example.com", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <lbael for="password", class="col-sm-3 col-form-label"><i class="fas fa-lock"></i> パスワード</lbael>
          <div class="col-sm-9">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control" %>
          </div>
        </div>

        <div class="actions text-center mt-4">
          <%= f.submit "ログイン", class: "btn btn-outline-info px-5" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>